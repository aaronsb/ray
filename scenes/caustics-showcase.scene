(material glass-purple  (type glass) (rgb 0.7 0.3 1.0) (ior 1.5))
(material glass-magenta (type glass) (rgb 1.0 0.3 0.8) (ior 1.5))

; Row 2: Clear glass (same material, different heights)
(material glass-clear (type glass) (rgb 1.0 1.0 1.0) (ior 1.5))

; Row 3: Clear glass with varying roughness
(material glass-rough-0 (type glass) (rgb 1.0 1.0 1.0) (ior 1.5) (roughness 0.0))
