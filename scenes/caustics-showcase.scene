(material glass-rough-4 (type glass) (rgb 1.0 1.0 1.0) (ior 1.5) (roughness 0.2))
(material glass-rough-5 (type glass) (rgb 1.0 1.0 1.0) (ior 1.5) (roughness 0.25))
(material glass-rough-6 (type glass) (rgb 1.0 1.0 1.0) (ior 1.5) (roughness 0.3))
(material glass-rough-7 (type glass) (rgb 1.0 1.0 1.0) (ior 1.5) (roughness 0.4))

; Row 4: Clear glass with varying IOR
(material glass-ior-1 (type glass) (rgb 1.0 1.0 1.0) (ior 1.1))
(material glass-ior-2 (type glass) (rgb 1.0 1.0 1.0) (ior 1.2))
(material glass-ior-3 (type glass) (rgb 1.0 1.0 1.0) (ior 1.3))
