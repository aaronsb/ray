(material glass-ior-8 (type glass) (rgb 1.0 1.0 1.0) (ior 2.4))

; Sun and floor
(sun (azimuth 0) (elevation 75) (intensity 1.5) (color 1.0 1.0 1.0) (ambient 0.05))
(material gray-floor (type diffuse) (rgb 0.3 0.3 0.3))
(floor (y 0) gray-floor)

; ============================================================================
; Row 1: Colored glass spheres (Z = 8)
; ============================================================================
(shape (sphere (at -8.75 2.0 8.0) (r 1.0)) glass-red)
(shape (sphere (at -6.25 2.0 8.0) (r 1.0)) glass-orange)
