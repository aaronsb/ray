; Caustics Showcase - Arrays of glass objects demonstrating caustic variety
; Features: cubes, cones, rods (cylinders), toruses, spheres, and teapots
; Various glass colors and IOR values

; ============================================================================
; Include teapot geometry
; ============================================================================
(include "teapot.scene")

; ============================================================================
; Glass Materials - Various colors and IOR values
; ============================================================================
; Standard glass (IOR 1.5)
(material clear-glass (type glass) (rgb 0.98 0.98 1.0) (ior 1.5))
(material red-glass (type glass) (rgb 1.0 0.3 0.3) (ior 1.5))
(material green-glass (type glass) (rgb 0.3 1.0 0.4) (ior 1.5))
(material blue-glass (type glass) (rgb 0.3 0.4 1.0) (ior 1.5))
(material amber-glass (type glass) (rgb 1.0 0.7 0.2) (ior 1.5))
(material purple-glass (type glass) (rgb 0.7 0.3 1.0) (ior 1.5))
(material cyan-glass (type glass) (rgb 0.3 0.9 0.9) (ior 1.5))
(material magenta-glass (type glass) (rgb 1.0 0.3 0.8) (ior 1.5))

; Water-like (IOR 1.33) - softer caustics
(material water (type glass) (rgb 0.85 0.95 1.0) (ior 1.33))

; Diamond-like (IOR 2.4) - intense caustics
(material diamond (type glass) (rgb 1.0 1.0 1.0) (ior 2.4))
(material pink-diamond (type glass) (rgb 1.0 0.85 0.9) (ior 2.4))

; Crystal (IOR 1.8) - moderate caustics
(material crystal (type glass) (rgb 0.95 0.98 1.0) (ior 1.8))

; Reference materials
(material white (type diffuse) (rgb 0.9 0.9 0.9))

; ============================================================================
; Environment
; ============================================================================
; Sun positioned for good caustic visibility
(sun (azimuth 35) (elevation 55) (intensity 1.2) (color 1.0 0.98 0.92) (ambient 0.03))

; Gray floor to see caustic patterns clearly
(material gray-floor (type diffuse) (rgb 0.35 0.35 0.35))
(floor (y 0) gray-floor)

; ============================================================================
; Row 1: Glass Cubes (z = 8) - varied colors
; Height = half*2, lifted by +0.75*height
; ============================================================================
(shape (box (at -7 1.35 8) (half 0.5 0.5 0.5)) red-glass)
(shape (box (at -5 1.1 8) (half 0.4 0.4 0.4)) green-glass)
(shape (box (at -3 1.35 8) (half 0.5 0.5 0.5)) blue-glass)
(shape (box (at -1 1.1 8) (half 0.4 0.4 0.4)) amber-glass)
(shape (box (at  1 1.35 8) (half 0.5 0.5 0.5)) purple-glass)
(shape (box (at  3 1.1 8) (half 0.4 0.4 0.4)) cyan-glass)
(shape (box (at  5 1.6 8) (half 0.6 0.6 0.6)) diamond)
(shape (box (at  7 1.1 8) (half 0.4 0.4 0.4)) crystal)

; ============================================================================
; Row 2: Cones (z = 5) - various glass types
; Lifted by +0.75*h
; ============================================================================
(shape (cone (at -7 0.9 5) (r 0.5) (h 1.2)) red-glass)
(shape (cone (at -5 0.75 5) (r 0.4) (h 1.0)) green-glass)
(shape (cone (at -3 0.9 5) (r 0.5) (h 1.2)) blue-glass)
(shape (cone (at -1 0.75 5) (r 0.4) (h 1.0)) amber-glass)
(shape (cone (at  1 0.9 5) (r 0.5) (h 1.2)) diamond)
(shape (cone (at  3 0.75 5) (r 0.4) (h 1.0)) water)
(shape (cone (at  5 0.9 5) (r 0.5) (h 1.2)) crystal)
(shape (cone (at  7 0.75 5) (r 0.4) (h 1.0)) magenta-glass)

; ============================================================================
; Row 3: Rods/Cylinders (z = 2) - laid flat, create line caustics
; Rotated 90 on Z, Y = r + 0.75*(2r) = 2.5r
; ============================================================================
(shape (cylinder (at -7 0.625 2) (r 0.25) (h 1.4) (rotate 0 0 90)) red-glass)
(shape (cylinder (at -5 0.5 2) (r 0.2) (h 1.2) (rotate 0 0 90)) green-glass)
(shape (cylinder (at -3 0.75 2) (r 0.3) (h 1.6) (rotate 0 0 90)) blue-glass)
(shape (cylinder (at -1 0.625 2) (r 0.25) (h 1.4) (rotate 0 0 90)) amber-glass)
(shape (cylinder (at  1 0.75 2) (r 0.3) (h 1.8) (rotate 0 0 90)) diamond)
(shape (cylinder (at  3 0.625 2) (r 0.25) (h 1.4) (rotate 0 0 90)) water)
(shape (cylinder (at  5 0.75 2) (r 0.3) (h 1.6) (rotate 0 0 90)) crystal)
(shape (cylinder (at  7 0.625 2) (r 0.25) (h 1.4) (rotate 0 0 90)) purple-glass)

; ============================================================================
; Row 4: Spheres (z = -1) - classic circular caustics
; Lifted by +0.75*diameter
; ============================================================================
(shape (sphere (at -7 1.25 -1) (r 0.7)) red-glass)
(shape (sphere (at -5 1.15 -1) (r 0.5)) green-glass)
(shape (sphere (at -3 1.25 -1) (r 0.7)) blue-glass)
(shape (sphere (at -1 1.35 -1) (r 0.5)) amber-glass)
(shape (sphere (at  1 1.35 -1) (r 0.9)) diamond)
(shape (sphere (at  3 1.6 -1) (r 0.6)) water)
(shape (sphere (at  5 1.85 -1) (r 0.7)) crystal)
(shape (sphere (at  7 1.35 -1) (r 0.5)) cyan-glass)

; ============================================================================
; Row 5: Toruses (z = -4) - ring caustics
; Flat orientation, lifted
; ============================================================================
(shape (torus (at -7 0.65 -4) (R 0.5) (r 0.15) (rotate 90 0 0)) red-glass)
(shape (torus (at -5 0.55 -4) (R 0.4) (r 0.12) (rotate 90 0 0)) green-glass)
(shape (torus (at -3 0.75 -4) (R 0.55) (r 0.18) (rotate 90 0 0)) blue-glass)
(shape (torus (at -1 0.55 -4) (R 0.4) (r 0.12) (rotate 90 0 0)) amber-glass)
(shape (torus (at  1 0.85 -4) (R 0.6) (r 0.2) (rotate 90 0 0)) diamond)
(shape (torus (at  3 0.65 -4) (R 0.5) (r 0.15) (rotate 90 0 0)) water)
(shape (torus (at  5 0.75 -4) (R 0.55) (r 0.18) (rotate 90 0 0)) crystal)
(shape (torus (at  7 0.55 -4) (R 0.4) (r 0.12) (rotate 90 0 0)) purple-glass)

; ============================================================================
; Row 6: Glass Teapots (z = -7) - complex curved caustics
; Teapot needs rotate -90 for lid-up orientation, lifted
; ============================================================================
(instance teapot (at -7 0.5 -7) (scale 0.35) (rotate -90 0 0) red-glass)
(instance teapot (at -5 0.9 -7) (scale 0.3) (rotate -90 30 0) green-glass)
(instance teapot (at -3 1.0 -7) (scale 0.35) (rotate -90 60 0) blue-glass)
(instance teapot (at -1 0.2 -7) (scale 0.3) (rotate -90 90 0) amber-glass)
(instance teapot (at  1 0.6 -7) (scale 0.4) (rotate -90 120 0) diamond)
(instance teapot (at  3 0.4 -7) (scale 0.35) (rotate -90 150 0) water)
(instance teapot (at  5 0.1 -7) (scale 0.35) (rotate -90 180 0) crystal)
(instance teapot (at  7 0.6 -7) (scale 0.3) (rotate -90 210 0) purple-glass)

; ============================================================================
; Center showcase: Large featured pieces (z = -10)
; ============================================================================
; Large clear glass sphere - classic circular caustic
(shape (sphere (at -3 2.0 -10) (r 1.5)) clear-glass)

; Large diamond cube - intense caustic from high IOR
(shape (box (at  0 2.5 -10) (half 0.9 0.9 0.9)) diamond)

; Large water torus - soft ring caustic
(shape (torus (at  3 1.3 -10) (R 1.0) (r 0.35) (rotate 90 0 0)) water)

; ============================================================================
; Reference objects (non-glass) for visual comparison
; ============================================================================
(shape (sphere (at -9 1.0 2) (r 0.4)) white)
(shape (sphere (at  9 1.0 2) (r 0.4)) white)
