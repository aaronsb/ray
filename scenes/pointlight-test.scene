; Point light test scene
(include "teapot.scene")

; Dim sun so point light is visible
(sun (azimuth 45) (elevation 30) (color 0.3 0.3 0.4) (intensity 0.3))

; Materials
(material ground (type checker) (rgb 0.9 0.9 0.9) (color2 0.2 0.2 0.2) (scale 2.0))
(material white  (type diffuse) (rgb 0.9 0.9 0.9))
(material red    (type diffuse) (rgb 0.9 0.2 0.2))

; Floor
(floor (y -0.01) ground)

; Point lights - red, green, blue
(light (at -3 3 0) (color 1.0 0.3 0.3) (intensity 15))
(light (at  0 3 3) (color 0.3 1.0 0.3) (intensity 15))
(light (at  3 3 0) (color 0.3 0.3 1.0) (intensity 15))

; Some objects to light
(shape (sphere (at -2 1 0) (r 1)) white)
(shape (sphere (at  2 1 0) (r 1)) white)
(shape (box (at 0 0.5 -2) (size 1 1 1)) red)

; Teapot in center
(instance teapot (at 0 0.3 0) (scale 0.5) (rotate -90 0 0) white)
