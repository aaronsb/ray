; Lighting Demo - Point lights and spotlights in darkness
; No sun - only artificial lights illuminate the scene

(include "teapot.scene")

; No sun light (intensity 0), no sky ambient
(sun (intensity 0) (ambient 0))

; Universe/void color - black void (no ambient from sky)
(background 0 0 0)

; Materials
(material ground (type checker) (rgb 0.8 0.8 0.8) (color2 0.15 0.15 0.15) (scale 1.5))
(material white  (type diffuse) (rgb 0.95 0.95 0.95))
(material red    (type diffuse) (rgb 0.9 0.2 0.2))
(material chrome (type metal) (rgb 0.95 0.95 0.97) (roughness 0.05))
(material gold   (type metal) (rgb 1.0 0.85 0.55) (roughness 0.1))
(material copper (type metal) (rgb 0.95 0.64 0.54) (roughness 0.15))
(material glass  (type glass) (rgb 0.95 0.98 1.0) (ior 1.5))
(material ruby   (type glass) (rgb 0.9 0.1 0.15) (ior 1.77))

; Floor
(floor (y -0.01) ground)

; Reduced point lights - ambient fill
(light (at -4 5 -2) (color 1.0 0.9 0.8) (intensity 8))    ; Warm left fill
(light (at  4 5 -2) (color 0.8 0.9 1.0) (intensity 8))    ; Cool right fill

; === SPOTLIGHTS ===

; Main spotlight with window blind gobo pattern - creates dramatic stripes
(spot (at 0 8 6) (aim 0 0 0) (color 1.0 0.95 0.9) (intensity 80) (angle 35 25) (gobo bars 3.0))

; Colored spotlights from sides - grid pattern
(spot (at -6 4 0) (aim 0 1 0) (color 1.0 0.4 0.2) (intensity 40) (angle 40 30) (gobo grid 2.0))
(spot (at  6 4 0) (aim 0 1 0) (color 0.3 0.5 1.0) (intensity 40) (angle 40 30) (gobo dots 4.0))

; Back spotlight with radial pattern
(spot (at 0 6 -8) (aim 0 1 2) (color 0.9 0.95 1.0) (intensity 60) (angle 50 35) (gobo radial 8.0))

; === TEST SHAPES ===

; White spheres to show spotlight patterns
(shape (sphere (at -2.5 1 0) (r 1)) white)
(shape (sphere (at  2.5 1 0) (r 1)) white)
(shape (sphere (at  0 1 -3) (r 1)) red)

; Chrome teapot in center - reflects the spotlights
(instance teapot (at 0 0.3 1.5) (scale 0.6) (rotate -90 0 0) chrome)

; Glass shapes for caustics
(shape (sphere (at -1.5 0.6 -1) (r 0.6)) glass)
(shape (sphere (at  1.5 0.6 -1) (r 0.6)) ruby)

; Metallic spheres for reflection testing
(shape (sphere (at -4 0.8 -2) (r 0.8)) gold)
(shape (sphere (at  4 0.8 -2) (r 0.8)) copper)
(shape (sphere (at  0 0.6 -5) (r 0.6)) chrome)
